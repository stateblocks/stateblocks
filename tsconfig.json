{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es3",
    "declaration": true,
    "jsx": "react",

    "outDir": "./dist/",
    "paths": {
    },
    "baseUrl": "./src",
    "moduleResolution":"node",
    "allowJs": true,
    "downlevelIteration":true,
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "**/quickstart.test.js"
  ]
}